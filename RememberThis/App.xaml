<Application x:Class="RememberThis.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RememberThis">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="Header-Script">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontFamily" Value="Edwardian Script ITC"/>
            <Setter Property="Margin" Value="10 20 0 0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Header">
            <Setter Property="FontSize" Value="24"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <Style TargetType="Button" x:Key="AddButton">
            <Setter Property="Height" Value="300"/>
            <Setter Property="Margin" Value="10 25 0 0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Content" Value="+"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10 5"/>
        </Style>
    </Application.Resources>
</Application>
